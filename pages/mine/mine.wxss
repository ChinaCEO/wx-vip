/* pages/mine/mine.wxss */



.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #F6F6F6;
}

.header {
  background-color: #fff;
  height: 100rpx;
}

.userinfo {
  /* display: flex;
  flex-direction: column;
  align-items: center; */
  position: relative;
}

.userinfo-avatar {
  width: 70rpx;
  height: 70rpx;
  margin: 0 30rpx 0 40rpx;
  border-radius: 50%;
  background-color: #f1f1f1;
  padding: 30rpx;
}

.userinfo-avatar-hasgone {
  width: 100rpx;
  height: 100rpx;
  padding: 0;
}

.userinfo-nickname {
  position: absolute;
  top: 25rpx;
  color: #888;  
}

.slogan {
  color: #888;
}

.login-btn {
  position: absolute;
  top:0;
  margin-top: 15rpx; 
}

.list-box {
  height: 80rpx;
}

.list-text {
  color: #353535;
}

.share-btn {
  position: absolute;
  top:0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background-color: transparent;
}

.share-btn::after{ border: none; }

