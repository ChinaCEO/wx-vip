/* pages/questions/questions.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  /* padding: 200rpx 0; */
  box-sizing: border-box;
  background-color: #fff; 
}

/* 加载页面 */
.loading {
  position: fixed;
  height: 100%;
  width: 100%;
  background-color: #fff;
  z-index: 100;   
}

.loading-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  
  height: 100%;
  width: 100%;
}

.loading-icon {
  display: inline-block;
  height: 200rpx;
  width: 200rpx;
  margin-top:50%;
  margin-bottom: 15rpx; 
}
/* 加载页面结束*/

/* 主要内容 */
.header {
  height: 8%;
  width: 100%;
  /* background-color: #ccc; */
  border-bottom: 1px solid #eee;
}

.content {
  height: 86%;
  width: 100%;
}

.footer { 
  width: 100%;
  border-top: 1px solid #eee;
}

.header-content {
  width: 95%;
  margin: 0 auto;
  height: 100%;
  position: relative;
}
.question-type {
  position: absolute;
  top:50%;
  margin-top:-12px;
  color: #888;
}

.question-count {
  position: absolute;
  top:50%;
  right: 0;
  margin-top:-12px;
  color: #888;
}

.question {
  width: 95%;
  margin: 0 auto;
  line-height: 35px;
  font-size: 1.2rem;
  color: #555;
}

.answers {
  width: 95%;
  margin: 10px auto;
  line-height: 33px;
  font-size: 1rem;
  color: #555;
  display: flex;
  flex-direction: column;
}

.answer {
  margin: 5px 0;
  padding: 0 10px;
  border: 1px solid #555;
  border-radius: 10px;
}

.answer-icon {
  display: inline-block;
}

.word-icon {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx 20rpx 10rpx 0;
  border: 1px solid #555;
  border-radius: 50%;
  text-align: center;  
  line-height: 50rpx;
}

.answer-flag-icon {
  /* display: inline-block; */
  margin: 20rpx 10rpx -17rpx 0;  
}

.footer {
  display: flex;
  flex-direction: row;
  height: 8%;
}

.collect-transpond {
  display: flex;
  flex-direction: row; 
  width: 50%;
  height: 100%; 
  align-items: center;  
}

.collect {  
  border-right: 1px solid #eee;
  
}

.collect-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto; 
}

.transpond-icon {
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
}

.btnBlk {
  width: 95%;
  margin: 0 auto;
}

.l-n-btn {
  margin-top: 20rpx;
}
/* 主要内容结束 */

/* 加入错题本提示 */
.errnote-alert {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 100;
  background-color: rgba(131, 125, 125, 0.5);
  text-align: center;
}
.add-error-text {
  display: inline-block;
  height: 200rpx;
  width: 600rpx;
  margin-top: 60%;
  border: 1px solid #fff;
  border-radius: 20rpx;
  line-height: 200rpx;
  background-color: #f1f1f1;
  position: relative
}

.add-icon {
  /* margin-top: 55rpx;  */
  position: absolute;
  top:40rpx;
  left: 20rpx;
}
.add-error {
  margin-left: 60rpx;
  font-size: 1.2rem;
  color: #888;
}